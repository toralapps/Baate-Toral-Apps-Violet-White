<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.CallNowActivity">


  <TextView
      android:id="@+id/title"
      style="@style/TextAppearance.Material3.DisplaySmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Call now"
      android:textColor="@color/purple_500"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />



  <com.google.android.material.card.MaterialCardView
      android:id="@+id/viewpagercontainer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="20dp"
      app:cardCornerRadius="20dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/title">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


  </com.google.android.material.card.MaterialCardView>


  <ImageView
      android:id="@+id/leftArrow"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:clickable="true"
      android:focusable="true"
      android:src="@drawable/left_arrow"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/viewpagercontainer"
      app:layout_constraintTop_toTopOf="@+id/viewpagercontainer"
      tools:layout_editor_absoluteX="16dp" />

  <ImageView
      android:id="@+id/rightArrow"
      android:layout_width="48dp"
      android:clickable="true"
      android:focusable="true"
      android:layout_height="48dp"
      android:src="@drawable/right_pink"
      app:layout_constraintBottom_toBottomOf="@+id/viewpagercontainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/viewpagercontainer"/>



  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.7" />


<com.ncorti.slidetoact.SlideToActView
    android:id="@+id/callbtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:outer_color="@color/gray"
    android:layout_margin="20dp"
    app:text="Slide to Call now"
    app:inner_color="@color/purple_500"
    app:slider_icon_color="@color/white"
    app:slider_icon="@drawable/ic_outline_call_24"
    app:layout_constraintTop_toBottomOf="@+id/guideline2"/>


  <LinearLayout
      android:id="@+id/banner_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="5dp"
      app:layout_constraintTop_toBottomOf="@+id/callbtn"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_centerHorizontal="true"
      android:layout_gravity="bottom|center"/>

</androidx.constraintlayout.widget.ConstraintLayout>