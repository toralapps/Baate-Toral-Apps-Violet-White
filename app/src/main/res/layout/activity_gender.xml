<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapes"
    tools:context=".activitys.GenderActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/maleradiobtn"
        app:layout_constraintStart_toStartOf="@+id/malecard"
        app:layout_constraintEnd_toEndOf="@+id/malecard"
        style="@style/TextAppearance.Material3.TitleLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/femaleradiobtn"
        app:layout_constraintStart_toStartOf="@+id/femalecard"
        app:layout_constraintEnd_toEndOf="@+id/femalecard"
        style="@style/TextAppearance.Material3.TitleLarge"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/malecard"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edittext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/male" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/femalecard"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/female" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/maleradiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:checked="true"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/malecard"
        app:layout_constraintEnd_toEndOf="@+id/malecard"
        app:layout_constraintStart_toStartOf="@+id/malecard"
        app:layout_constraintTop_toTopOf="@+id/malecard" />
    <com.google.android.material.radiobutton.MaterialRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/femaleradiobtn"
        android:layout_marginStart="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/femalecard"
        app:layout_constraintEnd_toEndOf="@+id/femalecard"
        app:layout_constraintStart_toStartOf="@+id/femalecard"
        app:layout_constraintTop_toTopOf="@+id/femalecard" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edittext"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/name"
        app:hintTextColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext"
        app:layout_constraintBottom_toTopOf="@+id/elevatedButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"/>


    <Button
        android:id="@+id/elevatedButton"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:text="Next"
        android:textSize="20sp"
        app:icon="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edittext"
        app:layout_constraintStart_toStartOf="@+id/edittext"
        app:layout_constraintTop_toBottomOf="@+id/edittext" />

</androidx.constraintlayout.widget.ConstraintLayout>