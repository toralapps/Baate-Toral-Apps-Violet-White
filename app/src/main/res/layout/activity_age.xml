<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_screen"
        tools:context="com.baatechat.bluewhite.girlvideo.call.com.photography.hindishayari.activitys.AgeActivity">


        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_margin="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </LinearLayout>

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@drawable/ic_previous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/shareapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/rateapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_rate_us" />

            <ImageView
                android:id="@+id/privecypolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_privacy" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu"
            app:layout_constraintVertical_bias="0.26">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/age_hading1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                android:textColor="@color/purple_500"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="This app requires you to be 18 years or older to continue"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="@color/purple_500" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialNumberPickercontainer"
            android:layout_width="150dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/container">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:np_width="50dp"
                app:np_height="150dp"
                android:padding="10dp"
                android:layout_gravity="center"
                app:np_dividerColor="@color/purple_500"
                app:np_formatter="18"
                app:np_max="59"
                app:np_dividerThickness="2dp"
                app:np_dividerLength="100dp"
                app:np_orientation="vertical"
                app:np_min="0"
                app:np_selectedTextColor="@color/teal_700"
                app:np_selectedTextSize="25sp"
                app:np_textColor="@color/purple_500"
                app:np_textSize="20sp"
                app:np_value="4"/>

        </com.google.android.material.card.MaterialCardView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/filledButton"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_next"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialNumberPickercontainer" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_icon"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialNumberPickercontainer"
            app:lottie_rawRes="@raw/loading" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:text="By using Video Call app you agree to our Privacy Policy and Terms use "
            android:textColor="@color/purple_500"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/banner_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>