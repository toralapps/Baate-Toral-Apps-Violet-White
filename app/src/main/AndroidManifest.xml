<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photography.stylishfonts">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.photography.stylishfonts.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoChat">
        <activity
            android:name="com.photography.stylishfonts.activitys.LoadingScreen"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.LocationActivity"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.CallNowActivity"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.ChatRoomActivity"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.TermUseActivity"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.GenderActivity"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.AgeActivity"
            android:exported="false" />
        <activity
            android:name="com.photography.stylishfonts.activitys.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.photography.stylishfonts.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.photography.stylishfonts.blockuser.BlockListActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="true" />
    </application>

</manifest>